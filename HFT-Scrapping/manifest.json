{
  "name": "HFT Tool",
  "description": "HFT Scrapping Tool",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs", "alarms"],
  "host_permissions": ["https://members.legacyresearch.com/my-subscriptions", "https://rdp.hft4.life/*", "http://localhost:4000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/ic_main16.png",
      "32": "/images/ic_main32.png",
      "48": "/images/ic_main48.png",
      "128": "/images/ic_main128.png"
    }
  },
  "icons": {
    "16": "/images/ic_main16.png",
    "32": "/images/ic_main32.png",
    "48": "/images/ic_main48.png",
    "128": "/images/ic_main128.png"
  },
  "options_page": "options.html"
}
